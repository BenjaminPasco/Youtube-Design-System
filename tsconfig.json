{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    // "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "."
  },
  "exclude": ["node_modules", "packages"],
  "include": ["**/*.ts", "**/*.tsx"]
}
